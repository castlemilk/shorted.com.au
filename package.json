{
  "name": "shorted-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Shorted.com.au - ASX Short Position Tracker",
  "scripts": {
    "predev": "echo 'ðŸ§¹ Cleaning up existing processes...' && make dev-stop-services > /dev/null 2>&1 || true",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd web && npm run dev",
    "dev:backend": "cd services && make run.shorts",
    "install": "npm run install:frontend",
    "install:frontend": "cd web && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd web && npm test",
    "test:backend": "cd services && make test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd web && npm run lint",
    "build": "npm run build:frontend",
    "build:frontend": "cd web && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}