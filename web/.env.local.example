# Local Development Environment Variables
# Copy this file to .env.local and update with your actual values

# Database - Supabase PostgreSQL
DATABASE_URL="postgresql://shorted:password@localhost:5432/shorted"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Market Data API
NEXT_PUBLIC_MARKET_DATA_API_URL="http://localhost:8090"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3020"

# Firebase Configuration (optional for development)
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-firebase-project-id"
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-firebase-app-id"

# Firebase Admin SDK (for server-side authentication)
AUTH_FIREBASE_PROJECT_ID="your-firebase-project-id"
AUTH_FIREBASE_CLIENT_EMAIL="your-service-account-email"
AUTH_FIREBASE_PRIVATE_KEY="your-private-key"

# Google OAuth (for Google Sign-In)
AUTH_GOOGLE_ID="your-google-oauth-client-id"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# Shorts Service Endpoint
SHORTS_SERVICE_ENDPOINT="http://localhost:9091"

# Skip environment validation during development (recommended for local dev)
SKIP_ENV_VALIDATION=true