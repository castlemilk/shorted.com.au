# Test-specific Dockerfile for shorts service
FROM golang:1.24.3-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o shorts-service ./shorts/cmd/server

FROM alpine:3.19
RUN apk --no-cache add ca-certificates curl
WORKDIR /root/

COPY --from=builder /app/shorts-service .

# Add health check endpoint for testing
EXPOSE 8080

CMD ["./shorts-service"]